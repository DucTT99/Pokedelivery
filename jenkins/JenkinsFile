pipeline {
    agent any

    // triggers {
    //     githubPush()
    // }


    stages {

        stage('Lint Test') {
            steps {
                echo "Building branch: ${env.BRANCH_NAME}"
            }
        } 
// branch check


        stage('API Test') {
            steps {
                echo 'Checking out code...'

            }
        }
// checkout

        stage('Build') {
            when {
                expression {
                    return env.BRANCH_NAME != 'main'
                }
            }

            steps {
                echo "bla"
            }
        }
//setup nodejs
        stage('Package') {

            echo "bla"
        }

 
        stage('Deploy') {

            echo "bla"
        }

//build

    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    
        always {
            cleanWs()
        }

    }

}
